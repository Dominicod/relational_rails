<div id="id_<%= @vehicle.id %>" class="d-flex align-items-center justify-content-center flex-column">
  <h5>Vehicle name: <span class="text-success"><%= @vehicle.name %></span></h5>
  <h5>Vehicle dealership location: <%= link_to @vehicle.dealership.name, "/dealerships/#{@vehicle.dealership.id}", class: "link-primary"%></h5>
  <p>Vehicle cylinder count: <%= @vehicle.cylinder_count %></p>
  <p>This vehicle has the luxury model: <%= @vehicle.luxury_model %></p>
  <p>Vehicle horsepower: <%= @vehicle.horsepower %></p>
  <p>Vehicle torque: <%= @vehicle.torque %></p>
</div>
<div class="btn-group" role="group">
  <%= form_with url: "/vehicles/#{@vehicle.id}", method: :delete, local: true, authenticity_token: form_authenticity_token do |form| %>
    <%= form.submit "Delete Vehicle", class: "mx-1 btn btn-danger" %>
  <% end %>
  <%= link_to "Update Vehicle", "/vehicles/#{@vehicle.id}/edit", class: "mx-1 btn btn-warning rounded" %>
</div>